<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <square70x70logo src="/favicon.ico"/>
      <square150x150logo src="/favicon.ico"/>
      <square310x310logo src="/favicon.ico"/>
      <wide310x150logo src="/favicon.ico"/>
      <TileColor>#667eea</TileColor>
    </tile>
    <notification>
      <polling-uri src="https://kanadojo.com/api/notifications/poll1"/>
      <polling-uri2 src="https://kanadojo.com/api/notifications/poll2"/>
      <polling-uri3 src="https://kanadojo.com/api/notifications/poll3"/>
      <polling-uri4 src="https://kanadojo.com/api/notifications/poll4"/>
      <polling-uri5 src="https://kanadojo.com/api/notifications/poll5"/>
      <frequency>30</frequency>
      <cycle>1</cycle>
    </notification>
    <badge>
      <polling-uri src="https://kanadojo.com/api/badge"/>
      <frequency>30</frequency>
    </badge>
  </msapplication>
</browserconfig>
